html {
	width: 100%;
	height: 100%;

	background-color: #eee;

	font-size: 16px;
	font-family: sans-serif;
	writing-mode: horizontal-tb;

	user-select: none;
}

beflex() {
	display: flex;
	flex-wrap: nowrap;
}

isMobile = "screen and (orientation: portrait)";
isPc = "screen and (orientation: landscape)";

$borderColor = #777;
$activeBorderColor = #d22e2e;

body {
	width: 100%;
	height: 100%;
	overflow-y: auto;

	beflex();
	flex-direction: column;

	>header {
		flex: 0 0 auto;

		beflex();
		flex-direction: column;
		align-items: center;
		justify-content: center;

		padding-block: 3rem;

		border-bottom: 4px dashed $borderColor;

		word-break: keep-all;
		white-space: nowrap;
		
		@media isMobile {
			font-size: 0.8rem;
		}

		h1 {
			font-size: 2em;
			font-weight: 550;
			
			+p {
				margin-block-start: 1em;

				user-select: text;
			}
		}
	}

	>main {
		flex: 1 0 auto;
		overflow-x: auto;

		padding: 4rem;

		beflex();
		flex-direction: column;
		align-items: stretch;
		justify-content: flex-start;
		gap: 2rem;

		>* {
			writing-mode: initial;
		}
		@media isPc {
			writing-mode: vertical-lr;
		}
		@media isMobile {
			padding: 2rem;
			gap: .8rem;
		}

		>section {
			min-width: fit-content;

			beflex();
			flex-direction: column;

			>header {
				flex: 0 0 auto;
				min-width: 16rem;

				@media isMobile {
					font-size: 0.8rem;
				}

				>h2 {
					font-weight: 500;
					font-size: 1.4em;
				}
			}

			>hr {
				margin: 0.5rem 0rem 1rem;
				color: $borderColor;
				border-top: 2px solid currentColor;
			}

			>main {
				flex: 1 0 auto;

				a {
					text-decoration: inherit;
					color: currentColor;

					&:visited li {
						// border-color: $borderColor;
					}
				}

				ul {
					beflex();
					flex-direction: column;
					gap: 1rem;
				}

				li {
					beflex();
					flex-direction: row;
					gap: .5rem;

					padding-left: 0.5rem;
					padding-block: 0.5rem;
					border-left: 0.5rem solid $activeBorderColor;

					user-select: text;

					.icon-container {
						beflex();
						align-content: stretch;
						justify-content: stretch;

						padding: .5rem;
						width: 3rem;
						height: 3rem;

						border: 1px solid $borderColor;
						border-radius: 50%;
						overflow: hidden;
						background-color: white;

						.icon {
							display: block;
							object-fit: contain;
						}
					}

					.info {
						beflex();
						flex-direction: column;
						gap: .5rem;
						max-width: 16rem;

						>h3 {
							font-size: 1.2em;
							font-weight: 500;
						}
					}
				}
			}
		}
	}
}